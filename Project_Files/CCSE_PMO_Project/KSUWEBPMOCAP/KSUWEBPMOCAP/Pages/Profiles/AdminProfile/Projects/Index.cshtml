@page
@model KSUWEBPMOCAP.Pages.Profiles.AdminProfile.Projects.IndexModel

@{
    Layout = "/Pages/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Index";
}



<h1>Project</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Filter Search:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ProjectNumSort">
                    @Html.DisplayNameFor(model => model.Projects[0].Project_Num)
                </a>

            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ProjectTypeSort">

                    @Html.DisplayNameFor(model => model.Projects[0].Proj_Type)
                </a>
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Projects[0].Num_Teams_Sponsored)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Projects[0].Project_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Proj_Sponsor_Benefit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Proj_Student_Benefit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Proj_hasNDA)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.StartDateSort">

                    @Html.DisplayNameFor(model => model.Projects[0].StartDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].EndDate)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Projects[0].Sponsor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Faculty_LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Dept_Name)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project_Num)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proj_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Teams_Sponsored)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proj_Sponsor_Benefit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proj_Student_Benefit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proj_hasNDA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty_LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept_Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Project_ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Project_ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Project_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.Projects.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Projects.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Projects.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Projects.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>