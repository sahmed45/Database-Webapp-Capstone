@page
@model KSUWEBPMOCAP.Pages.Profiles.AdminProfile.Sponsors.IndexModel

@{
    Layout = "/Pages/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Index";
}



<h1>Sponsors</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Filter By Name or Org:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SponsorSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Title)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.OrgSort"></a>

                @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Org)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SponsorSort">

                    @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Email)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.PhoneSort">

                    @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Phone)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Address)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.WebSort">

                    @Html.DisplayNameFor(model => model.Sponsor[0].Sponsor_Website)
                </a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sponsors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Org)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor_Website)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Sponsor_ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Sponsor_ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Sponsor_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.Sponsors.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Sponsors.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Sponsors.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Sponsors.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>
